// Purpose: Simple Jenkins pipeline to checkout Python project, install deps, run pytest, and generate reports.
pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS = 'github-credentials'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/GodwinCyber/alx-backend-python.git',
                    credentialsId: "${GITHUB_CREDENTIALS}"
            }
        }

        stage('Set up Python Environment') {
            steps {
                // Create a new virtualenv and install dependencies using ShiningPanda
                withPythonEnv('python3') {
                    sh '''
                        pip install --upgrade pip
                        pip install -r messaging_app/requirements.txt
                    '''
                }
            }
        }

        stage('Run Tests') {
            steps {
                withPythonEnv('python3') {
                    sh '''
                        pytest messaging_app/tests --junitxml=report.xml
                    '''
                }
            }
        }

        stage('Archive Test Report') {
            steps {
                junit 'report.xml'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished successfully.'
        }
    }
}
